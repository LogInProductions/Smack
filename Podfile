project 'Smack.xcodeproj'

# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Smack' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Smack
  # alamofire: library built on top of URL session. makes it easier to workspace with web requests
  pod 'Alamofire'
  
  # swiftdjson: makes it easier to work with json data
  pod 'SwiftyJSON'
  
  # socket.io framework we will use to make app works in real time
  pod 'Socket.IO-Client-Swift'

end
